import numpy as np
#1.生成一個等差數列，首數為0，尾數為20，公差為1的數列。
a = np.arange(0,21,1)
b = np.linspace(0,20,21,endpoint=True,retstep=True)
print({"arange":a,"linspace":b})

#2.呈上題，將以上數列取出偶數。
a.tolist()
type(a)

for i in a:
    if i%2==0:
        print(i)
        
#3.呈1題，將數列取出3的倍數。
a=a[1:]
for i in a:
    if i%3==0:
        print(i)
